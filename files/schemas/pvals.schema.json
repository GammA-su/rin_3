{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "pvals.json (per-suite, per-seed)",
  "type": "object",
  "required": ["method", "alpha", "suites"],
  "properties": {
    "method": { "type": "string", "enum": ["paired_t", "wilcoxon", "bootstrap"] },
    "alpha": { "type": "number", "minimum": 0, "maximum": 0.2 },
    "suites": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "per_seed"],
        "properties": {
          "name": { "type": "string" },
          "per_seed": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "required": ["seed", "p"],
              "properties": {
                "seed": { "type": "integer" },
                "p": { "type": "number", "minimum": 0, "maximum": 1 }
              }
            }
          }
        }
      }
    }
  }
}

